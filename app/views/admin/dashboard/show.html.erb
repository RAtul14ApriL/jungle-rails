<h1>Dashboard</h1>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h2 class="count"><%= @category_count %></h2>
          <h3 class="card-title">Categories</h3>
          <%= link_to "View Categories", [:admin, :categories], class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h2 class="count"><%= @product_count %></h2>
          <h3 class="card-title">Products</h3>
          <%= link_to "View Products", [:admin, :products], class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</div>