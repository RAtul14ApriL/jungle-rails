<h1>Login</h1>

<div class="panel panel-default products">
  <%= form_tag '/login' do %>
    <% if flash[:alert] != nil  %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>      
    <% end %>
    <div class="mb-3">
      <p>Email:<br><%= text_field_tag :email %></p><br>
    </div>
    <div class="mb-3">
      <p>Password:<br><%= password_field_tag :password %></p><br>
    </div>
    <%= submit_tag "Submit", class: "btn btn-primary" %>
    <br><br>
    <p>Don't have an account? Signup <%= link_to 'here', [:signup] %></p>
  <% end %>

</div>