<h1>Login</h1>

<div class="panel panel-default products">
  <%= form_tag '/login' do %>
    <% if @errors.length != 0 %>
      <div class="alert alert-danger">
        <strong>The following errors prevented creating:</strong>
          <ul>
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
          </ul>
      </div>
    <% elsif @user.save %>
      <div class="alert alert-success">
        "User Created!"
      </div>
    <% end %>
    <div class="mb-3">
      <p>Email:<br><%= text_field_tag :email %></p><br>
    </div>
    <div class="mb-3">
      <p>Password:<br><%= password_field_tag :password %></p><br>
    </div>
    <%= submit_tag "Submit", class: "btn btn-primary" %>
    <br><br>
    <p>Don't have an account? Signup <%= link_to 'here', [:signup] %></p>
  <% end %>

</div>